{
    "version": "0.2.0",
    "trace": true,
    "configurations": [

        {
            "name": "Launch via NPM",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "upload",
                "--",
            ],
            "args": [
                "{\"audioFilePath\":\"../output/Podcast-Jul24-2023-05PM/final-podcast-to-upload.mp3\",\"podcastTitle\":\"Podcast-Jul24-2023-05PM\",\"podcastDescription\":\"The Autonomous Tech Podcast output/Podcast-Jul24-2023-05PM\"}"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "trace": true,
            "cwd": "${workspaceFolder}/podcastUploader",
        },
        {
            "name": "Python: Debug App",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/podcastTextGenerationApp/app.py",
            "console": "integratedTerminal",
            "args": ["Podcast-Jul17-2024-02PM"],
            "justMyCode": true
        },
        {
            "name": "Run Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["output/Podcast-Jul17-2024-06AM/intro_text/0_intro.txt", "0_intro.mp3"],
            "justMyCode": true
        },
        {
            "name": "Generate Podcast Text Files",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/podcastTextGenerationApp/app.py",
            "console": "integratedTerminal",
            // "args": ["Podcast-Jul24-2024-05PM"],
            "justMyCode": true
        },
        {
            "name": "Generate Chapter Files",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/podcastTextGenerationApp/generatePodcastChapterFile.py",
            // "args": ["output/Podcast-Jul23-2024-09AM"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        
    ]
}
